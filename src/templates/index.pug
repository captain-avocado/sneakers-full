extends ./base
block head
    title Главная страница
block variables
block content
    header.header
      .container.container_header
        .city.header__city
          a(href="#").city__link
            svg.city__icon
              use(xlink:href=`images/sprite.svg#placeholder`)
          .city__name Владивосток
        .logo.header__logo 
          a(href="#") sneakers
        ul.icons.header__icons
          li.icons__item
            a(href="#").icons__link
              svg.icons__search
                use(xlink:href=`images/sprite.svg#search`)
          li.icons__item
            a(href="#").icons__link
              svg.icons__avatar
                use(xlink:href=`images/sprite.svg#avatar`)
          li.icons__item
            a(href="#").icons__link
              .icons__cart.cart
                svg.cart__icon
                  use(xlink:href=`images/sprite.svg#cart`)
                .cart__num 2
    ul.menu
      .container.container_menu
        li.menu__item.active
          a.menu__link(href="#") новая коллекция
        li.menu__item
          a.menu__link(href="#") мужские
        li.menu__item
          a.menu__link(href="#") женские
        li.menu__item
          a.menu__link(href="#") детские
        li.menu__item
          a.menu__link(href="#") распродажи
        li.menu__item
          a.menu__link(href="#") магазин
    .slider
      .container.container_slider
        ul.slider__list
          li.slider__item.active
            img.slider__img(src="images/slider2.jpg", alt="")
            .info.slider__info
              .info__text woman's air max 270
              .info__price 3 990р
              a(href="#").info__btn.btn.btn_more Подробнее
          li.slider__item
            img.slider__img(src="", alt="")
          li.slider__item
            img.slider__img(src="", alt="")
        ul.slider__dots.dots
          li.dots__item.active
            a.dots__link(href="#")
          li.dots__item
            a.dots__link(href="#")
          li.dots__item
            a.dots__link(href="#")
        a(href="#").slider__nav.slider__nav_next
          i.fas.fa-angle-right
        a(href="#").slider__nav.slider__nav_prev
          i.fa.fa-angle-left
    script(src="scripts/main.bundle.js")
