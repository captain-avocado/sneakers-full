    #particles-js {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #3151CC;
      z-index: 100000;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #agency {
      position: absolute;
      top: 10%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      color: #fff;
      font-size: 16px;
      font-weight: 600;

      transition: opacity .5s, top .5s, left .3s;
    }

    #agency.visible {
      opacity: .6;
    }

    #agency:hover {
      opacity: 1;
    }

    #khorito {
      font-family: 'Black Rose';
      font-size: 28px;
    }

    .loading {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      transition: opacity .5s, top .5s, left .3s;
    }

    .letter-main {
      fill: none;
      transform: translate(0, -200%);
      stroke: #fff;
      stroke-width: 2px;
      stroke-dashoffset: -630;
      stroke-dasharray: -630;
      stroke-linecap: butt;
      stroke-linejoin: round;
      /*animation: dash 3.5s ease-in-out forwards;*/
    }

    @keyframes dash {
      100% {
        stroke-dashoffset: 0;
      }
    }

    @keyframes fromTop {
      0%  {
        transform: translate(0, -20%);
        opacity: 0;
      }

      50% {
        transform: translate(0, 15%);
        opacity: .4;
      }

      100% {
        transform: translate(0, 0);
        opacity: 1;
      }
    }

    @keyframes wave {
      0%   {x: -400px;}
      100% {x: 0}
    }
        
    @keyframes fill-up {
      0% {
        height: 0;
        y: 130px;
      }
      100% {
        height: 160px;
        y: -30px;
      }
    }
    .water-fill {
      animation: none;
    }

    .interactive {
      cursor: pointer;
      position: absolute;
      bottom: 10%;
      left: 50%;
      transform: translate(-50%, 0);
      width: 500px;
      opacity: 0;
      transition: opacity .5s;
      text-align: center;
      color: #fff;
    }

    .interactive.visible {
      opacity: .6;
    }

    .interactive:hover {
      opacity: 1;
    }

    .interactive__svg {
      display: flex;
      justify-content: space-between;
      align-items: center;
