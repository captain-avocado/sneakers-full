                      .category__name reebok
                    li.categories__item.category
                      input(type="radio" name="category").category__radio
                      .category__name vans
                li.filters__item.filter.filter_price
                  .filter__title.title
                    .title__text.no-top-border.no-right-border Цена
                    a(href="#").title__icon.no-top-border
                      i.fas.fa-angle-down
                  .filter__content.price.no-top-border
